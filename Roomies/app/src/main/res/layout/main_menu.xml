<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_four"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:layout_gravity="start|center_horizontal"
            android:text="EMS"
            android:onClick="EmsButtonClick"
            android:height="130dp"
            android:background="@drawable/button_press"
            android:textStyle="bold"
            android:textSize="18sp"
            android:typeface="serif"
            android:textColor="@android:color/holo_orange_dark" />

        <Button
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_horizontal"
            android:layout_weight="1"
            android:text="Chores"
            android:onClick="ChoreClick"
            android:height="130dp"
            android:background="@drawable/button_press"
            android:textStyle="bold"
            android:textSize="18sp"
            android:typeface="serif"
            android:textColor="@android:color/holo_orange_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_gravity="start|center_horizontal"
            android:layout_weight="1"
            android:text="Bulletin Board"
            android:onClick="BulletinBoardClick"
            android:height="130dp"
            android:background="@drawable/button_press"
            android:textStyle="bold"
            android:textSize="18sp"
            android:typeface="serif"
            android:textColor="@android:color/holo_orange_dark"  />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="Finances"
            android:onClick="FinanceClick"
            android:height="130dp"
            android:background="@drawable/button_press"
            android:textStyle="bold"
            android:textSize="18sp"
            android:typeface="serif"
            android:textColor="@android:color/holo_orange_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_horizontal"

        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:text="Car Sharing"
        android:onClick="CarSharingClick"
        android:height="130dp"
        android:background="@drawable/button_press"
        android:textStyle="bold"
        android:textSize="18sp"
        android:typeface="serif"
        android:textColor="@android:color/holo_orange_dark" />

    <Button
        android:layout_height="match_parent"
        android:text="Logout"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:height="130dp"
        android:layout_gravity="bottom"
        android:onClick="LogoutClick"
        android:background="@drawable/button_press"
        android:textStyle="bold"
        android:textSize="25sp"
        android:typeface="serif"
        android:textColor="@android:color/holo_orange_dark" />

    </LinearLayout>
</LinearLayout>