<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_four"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Claim"
            android:id="@+id/button10"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_press"
            android:onClick="FinalizeClaimClick"
            android:textStyle="bold"
            android:textSize="18sp"
            android:typeface="serif"
            android:textColor="@android:color/holo_orange_dark"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done / Cancel"
            android:id="@+id/button11"
            android:layout_weight="1"
            android:onClick="DoneCancelClick"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/timePicker"
            android:background="@drawable/button_press"
            android:textStyle="bold"
            android:textSize="18sp"
            android:typeface="serif"
            android:textColor="@android:color/holo_orange_dark"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editTextStartDate"
        android:textColor="@android:color/holo_orange_dark" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:id="@+id/buttonStartDate"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/timePicker"
        android:background="@drawable/button_press"
        android:textStyle="bold"
        android:textSize="18sp"
        android:typeface="serif"
        android:onClick="StartDateClick"
        android:textColor="@android:color/holo_orange_dark"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editTextStartTime"
        android:textColor="@android:color/holo_orange_dark" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:id="@+id/buttonStartTime"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/timePicker"
        android:background="@drawable/button_press"
        android:textStyle="bold"
        android:textSize="18sp"
        android:typeface="serif"

        android:onClick="StartTimeClick"
        android:textColor="@android:color/holo_orange_dark"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editTextEndDate"
        android:textColor="@android:color/holo_orange_dark"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:id="@+id/buttonEndDate"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/timePicker"
        android:background="@drawable/button_press"
        android:textStyle="bold"
        android:textSize="18sp"

        android:onClick="EndDateClick"
        android:typeface="serif"
        android:textColor="@android:color/holo_orange_dark"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editTextEndTime"
        android:textColor="@android:color/holo_orange_dark"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:id="@+id/buttonEndTime"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/timePicker"
        android:background="@drawable/button_press"
        android:textStyle="bold"

        android:onClick="EndTimeClick"
        android:textSize="18sp"
        android:typeface="serif"
        android:textColor="@android:color/holo_orange_dark"/>



</LinearLayout>
